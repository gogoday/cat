{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noErrorTruncation": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*"
  ]
}
